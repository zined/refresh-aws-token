{
  "name": "A browser extensions that allows to login to AWS via ADFS",
  "description": "Login to AWS",
  "version": "1.0",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
      "default_title": "Login to an AWS Account via ADFS",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  },
  "manifest_version": 2
}
